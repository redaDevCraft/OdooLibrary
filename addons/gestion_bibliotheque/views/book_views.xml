<odoo>
  <record id="view_book_search" model="ir.ui.view">
    <field name="name">gestion_bibliotheque.book.search</field>
    <field name="model">gestion_bibliotheque.book</field>
    <field name="arch" type="xml">
      <search string="Books">
        <field name="isbn" string="ISBN" />
        <field name="langue" string="Language" />
      </search>
    </field>
  </record>


  <!-- Tree view for Books -->
  <record id="view_book_tree" model="ir.ui.view">
    <field name="name">book.tree</field>
    <field name="model">gestion_bibliotheque.book</field>
    <field name="arch" type="xml">
      <tree string="Books" editable="top">
        <field name="titre" />
        <field name="langue" />
        <field name="isbn" />
        <field name="npr" />
        <field name="libre" />
      </tree>
    </field>
  </record>

  <!-- Form view for Books -->
  <record id="view_book_form" model="ir.ui.view">
    <field name="name">book.form</field>
    <field name="model">gestion_bibliotheque.book</field>
    <field name="arch" type="xml">
      <form string="Books">
        <sheet>
          <group>
            <field name="titre" />
            <field name="langue" />
            <field name="isbn" />
            <field name="npr" />
            <field name="img" />
            <field name="libre" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action for Books -->
  <record id="action_book" model="ir.actions.act_window">
    <field name="name">Books</field>
    <field name="res_model">gestion_bibliotheque.book</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="view_book_search" />
  </record>


  <!-- Menu for Books -->
  <menuitem id="menu_book_root" name="Books" parent="menu_library_root" action="action_book" />
</odoo>