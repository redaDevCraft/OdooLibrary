<odoo>
    <record id="view_emprunt_ligne_tree" model="ir.ui.view">
        <field name="name">emprunt.ligne.tree</field>
        <field name="model">gestion_bibliotheque.emprunt_ligne</field>
        <field name="arch" type="xml">
            <tree string="Emprunt Ligne">
                <field name="langue" />
                <field name="isbn" />
                <field name="npr" />
                <field name="book_id" />
                <field name="borrow_record_id" />
            </tree>
        </field>
    </record>

    <record id="view_emprunt_ligne_form" model="ir.ui.view">
        <field name="name">emprunt.ligne.form</field>
        <field name="model">gestion_bibliotheque.emprunt_ligne</field>
        <field name="arch" type="xml">
            <form string="Emprunt Ligne">
                <sheet>
                    <group>
                        <field name="langue" />
                        <field name="isbn" />
                        <field name="npr" />
                        <field name="book_id" />
                        <field name="borrow_record_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_emprunt_ligne" model="ir.actions.act_window">
        <field name="name">Emprunt Ligne</field>
        <field name="res_model">gestion_bibliotheque.emprunt_ligne</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_emprunt_ligne_root" name="Emprunt Ligne" parent="menu_library_root"
        action="action_emprunt_ligne" />

</odoo>