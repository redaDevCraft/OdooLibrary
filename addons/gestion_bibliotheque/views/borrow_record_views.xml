<odoo>
    <record id="view_borrow_record_search" model="ir.ui.view">
        <field name="name">borrow.record.search</field>
        <field name="model">gestion_bibliotheque.borrow_record</field>
        <field name="arch" type="xml">
            <search>
                <field name="member_id" string="Member" />
                <field name="author_id" string="Author" />
                <group expand="0" string="Group By">
                    <filter name="group_by_rendu" string="Group by Rendu"
                        context="{'group_by': 'rendu'}" />
                </group>

            </search>
        </field>
    </record>

    <record id="view_borrow_record_tree" model="ir.ui.view">
        <field name="name">borrow.record.tree</field>
        <field name="model">gestion_bibliotheque.borrow_record</field>
        <field name="arch" type="xml">
            <tree string="Borrow Records" editable="top">
                <field name="member_id" />
                <field name="author_id" />
                <field name="date_debut" />
                <field name="date_fin" />
                <field name="rendu" />
            </tree>
        </field>
    </record>

    <record id="view_borrow_record_form" model="ir.ui.view">
        <field name="name">borrow.record.form</field>
        <field name="model">gestion_bibliotheque.borrow_record</field>
        <field name="arch" type="xml">
            <form string="Borrow Records">
                <sheet>
                    <group>
                        <field name="book_id" />
                        <field name="member_id" />
                        <field name="author_id" />
                        <field name="date_debut" />
                        <field name="date_fin" />
                        <field name="rendu" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_borrow_record" model="ir.actions.act_window">
        <field name="name">Borrow Records</field>
        <field name="res_model">gestion_bibliotheque.borrow_record</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_borrow_record_search" />
    </record>

    <menuitem id="menu_borrow_record_root" name="Borrow Records" parent="menu_library_root"
        action="action_borrow_record" />
</odoo>