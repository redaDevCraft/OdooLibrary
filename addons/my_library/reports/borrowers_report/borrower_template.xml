<odoo>
    <template id="borrower_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col-xs-6">
                                <h2>Borrower</h2>
                                <p>
                                    <strong>Name:</strong>
                                    <span t-field="doc.name" />
                                </p>
                                <p>
                                    <strong>First Name:</strong>
                                    <span t-field="doc.first_name" />
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>

        </t>
    </template>
</odoo>